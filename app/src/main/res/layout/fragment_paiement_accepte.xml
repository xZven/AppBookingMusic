<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="net.stri.m2.appbookingmusic.FragmentPaiementAccepte">

    <!-- TODO: Update blank fragment layout -->

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent" >

            <TextView
                android:text="Paiement"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:id="@+id/textViewPaiement"
                android:textSize="18sp" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent" >

            <RelativeLayout
                android:id="@+id/fragment"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:padding="5dp">

                <ImageView
                    android:id="@+id/jaquette"
                    android:layout_width="75dp"
                    android:layout_height="75dp"
                    tools:background="#AAA"
                    />

                <TextView
                    android:id="@+id/artiste"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@android:color/black"
                    android:textSize="16dp"
                    android:layout_marginLeft="10dp"
                    android:layout_toRightOf="@+id/jaquette"
                    android:layout_alignTop="@+id/jaquette"
                    tools:text="Artiste"
                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/salle"
                    android:textSize="16dp"
                    android:layout_marginLeft="10dp"
                    android:layout_below="@+id/artiste"
                    android:layout_toRightOf="@+id/jaquette"
                    tools:text="Salle"
                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/ville"
                    android:textSize="16dp"
                    android:layout_marginLeft="5dp"
                    android:layout_toEndOf="@+id/salle"
                    android:layout_below="@+id/artiste"
                    tools:text="Ville"
                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/date"
                    android:textSize="16dp"
                    android:layout_marginLeft="10dp"
                    android:layout_below="@+id/salle"
                    android:layout_toRightOf="@+id/jaquette"
                    tools:text="Date"
                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/complet"
                    android:textSize="16dp"
                    android:layout_toEndOf="@+id/date"
                    android:layout_below="@+id/salle"
                    android:layout_marginLeft="5dp"
                    tools:text="Complet"
                    />

            </RelativeLayout>
        </TableRow>

        <TableRow
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:layout_width="150dp">

            <View
                android:id="@+id/SplitLine"
                android:layout_height= "2dp"
                android:layout_marginTop="15dp"
                android:layout_marginBottom="15dp"
                android:background="#b7c0c7"
                android:layout_width="wrap_content" />

        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:text="Félicitation votre paiement \n par CB est accepté."
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/textViewPaiementCB"
                android:textStyle="normal|bold"
                android:textSize="20sp"
                android:textAlignment="center" />

        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="10dp">

            <TextView
                android:text="Vous avez reçu par courrier \n électronique votre confirmation de paiement."
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/textViewRecuMail"
                android:textAlignment="center" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent" >

            <View
                android:id="@+id/SplitLine2"
                android:layout_width="match_parent"
                android:layout_height= "2dp"
                android:layout_marginTop="15dp"
                android:layout_marginBottom="15dp"
                android:background="#b7c0c7" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="15dp">

            <Button
                android:text="Voir mon billet"
                android:id="@+id/buttonVoirBillet"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1" />
        </TableRow>

    </TableLayout>
</FrameLayout>
